<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#A2A2D0">

    <LinearLayout
        android:id="@+id/headerApp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black"
            android:background="#1F75FE"
            android:layout_weight="0.5"
            android:text='@string/app_name'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mainTable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerApp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstTable"
            android:background="#A2A2D0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainTable"
            android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/black"
            android:id="@+id/chbTax"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text='@string/tax'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/oklad"
            android:text='@string/base'
            android:layout_width="55dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:textColor="@color/black"
            android:text="73000"
            android:id="@+id/valBase"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/workHours'
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColor="@color/black"
                android:text="184"
                android:id="@+id/valWorkHours"

                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"/>
            <Button
                android:id="@+id/btnLegend"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:onClick="btnLegendOnClickEvent"
                android:background="@drawable/custom_button_shape"
                android:text='@string/Legend' />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/secondTable"
            android:background="#A2A2D0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainTable"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/black"
                android:text='@string/regionalCoeff'
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColor="@color/black"
                android:text="25"
                android:id="@+id/valReginalCoeff"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"/>

            <TextView
                android:textColor="@color/black"
                android:text='@string/bonus'
                android:layout_width="35dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColor="@color/black"
                android:text="30"
                android:id="@+id/valBonus"

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"/>


            <TextView
                android:textColor="@color/black"
                android:text='@string/harm'
                android:layout_width="35dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColor="@color/black"
                android:text="5"
                android:id="@+id/valHarm"

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"/>

            <TextView
                android:textColor="@color/black"
                android:text='@string/singlePay'
                android:layout_width="35dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColor="@color/black"
                android:text='@string/zero'
                android:id="@+id/valSinglePay"

                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="6"/>

            <TextView
                android:textColor="@color/black"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/thirdTable"
        android:background="#A2A2D0"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTable"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:text='@string/substitPerc'
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="@color/black"
            android:text='@string/zero'
            android:id="@+id/valSubstitPerc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"/>

        <TextView
            android:textColor="@color/black"
            android:text='@string/substitHour'
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="@color/black"
            android:text='@string/zero'
            android:id="@+id/valSubstitHour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Table4"
        android:background="#A2A2D0"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTable">

    <ListView
        android:id="@+id/countriesList"
        android:layout_width="150dp"
        android:layout_height="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTable"
        android:background="@drawable/back">
    </ListView>

        <LinearLayout
            android:id="@+id/Table5"
            android:layout_width="225dp"
            android:layout_height="350dp"
            android:background="#A2A2D0"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainTable">

            <CalendarView
                android:id="@+id/datePicker"
                android:firstDayOfWeek="2"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:calendarViewShown="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/valOverWorkHours" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#A2A2D0"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text='@string/hours' />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/valOverWorkHours"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:textSize="22sp"
                    android:maxLength="2"/>
                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:onClick="btnAddOnClickEvent"
                    android:text='@string/add' />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/Table6"
            android:background="#A2A2D0"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Table5"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:text='@string/salary'
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/zero'
                android:id="@+id/salary"
                android:layout_width="125dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:text='@string/clearSalary'
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/zero'
                android:id="@+id/clearSalary"
                android:layout_width="125dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Table7"
            android:background="#A2A2D0"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Table6"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:text='@string/inHourSalary'
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/zero'
                android:id="@+id/inHourSalary"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/test"
                android:text='@string/overWorkH'
                android:layout_width="55dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/zero'
                android:id="@+id/overWorkH"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:text='@string/overWork'
                android:layout_width="55dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/overWork"
                android:text='@string/zero'
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/Table8"
        android:background="#A2A2D0"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Table7"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:text='@string/overWorkClear'
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:text='@string/zero'
            android:id="@+id/overWorkClear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/Table9"
            android:background="#A2A2D0"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Table8"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnCalc"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="btnCalcOnClickEvent"
                android:text='@string/calc' />
            <Button
                android:id="@+id/btnReset"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="btnResetOnClickEvent"
                android:text='@string/reset' />

        </LinearLayout>
        <TextView
            android:id="@+id/EasterEgg"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@string/EasterEgg'
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:visibility="invisible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>