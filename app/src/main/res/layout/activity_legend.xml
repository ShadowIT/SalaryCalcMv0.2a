<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LegendActivity">
    <LinearLayout
        android:id="@+id/mainLegend"
        android:background="#A2A2D0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/headerLegend"
        android:background="#1F75FE"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/black"
            android:text='@string/Legend'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonLegend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLegend"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLegend"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:onClick="btnLegendOnClickEvent"
            android:background="@drawable/custom_button_shape"
            android:text='@string/Back' />
        <Button
            android:id="@+id/btnInstruction"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:onClick="btnInstructOnClickEvent"
            android:background="@drawable/custom_button_shape"
            android:text='@string/Instuct' />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/textLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLegend"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtLegend"
            android:textColor="@color/black"
            android:text='@string/textLegend'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>